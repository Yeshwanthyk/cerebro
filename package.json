{
  "name": "cerebro",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun --hot web/src/dev-server.ts",
    "start": "bun src/index.ts start",
    "build": "bun run build:web && bun run build:exe",
    "build:web": "cd web && bun run build",
    "build:exe": "bun run scripts/build-executable.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit && cd web && tsc --noEmit",
    "lint": "oxlint --deny-warnings",
    "check": "bun run lint && bun run typecheck",
    "install:all": "bun install && cd web && bun install"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "simple-git": "^3.27.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxlint": "^1.31.0",
    "typescript": "^5.9.3"
  }
}
